<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <TableRow
        android:layout_width="288dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Poid"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/poidEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="input poid"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/com_facebook_button_background_color_selected"
            android:textSize="14sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Taille"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/tailleEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="input taille"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/com_facebook_button_background_color_selected"
            android:textSize="14sp" />
    </TableRow>

    <TableRow
        android:layout_width="323dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/annulerBtnPopup"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/com_facebook_blue"
            android:text="Annuler"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/validerBtnPopup"
            android:layout_width="222dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/com_facebook_blue"
            android:text="ComplÃ©ter l'inscription"
            android:textColor="@color/colorWhite" />
    </TableRow>

</TableLayout>